        "import math  # Para usar gcd (máximo común divisor)\n",
        "\n",
        "# Programa para calcular el Máximo Común Múltiplo (MCM)\n",
        "\n",
        "# Pedir datos al usuario\n",
        "nombre = input(\"Ingresa tu nombre: \")\n",
        "num1 = int(input(\"Ingresa el primer número: \"))\n",
        "num2 = int(input(\"Ingresa el segundo número: \"))\n",
        "\n",
        "# Calcular MCM\n",
        "mcm = abs(num1 * num2) // math.gcd(num1, num2)\n",
        "\n",
        "# Mostrar resultado\n",
        "print(f\"\\nHola {nombre}, el Máximo Común Múltiplo de {num1} y {num2} es: {mcm}\")"
      ]
